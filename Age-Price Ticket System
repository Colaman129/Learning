
price1 = 25
price2 = 50
while True:

    try:
        age = int(input("How old are you: "))
        if age < 0:
            print("Bro is not born yet")
        elif age > 100:
            print("I dont belive you")
        else:
            print(f"You are {age} years old")
            break
    except ValueError:
        print("Enter a number")

if 65 > age > 18:
    print(f"Your price is {price2}")
elif age < 18:
    print(f"Your price is {price1}")
elif age > 65:
    print("You can have it for free :)")
